{
  "name": "mini-games",
  "version": "1.0.0",
  "description": "HTML5 mini games built with Phaser 3 and Typescript",
  "keywords": [
    "game",
    "html5",
    "webgl",
    "phaser",
    "typescript"
  ],
  "homepage": "https://github.com/imprevo/mini-games",
  "repository": {
    "type": "git",
    "url": "git@github.com:imprevo/mini-games.git"
  },
  "author": "Evgeniy Mokeev",
  "license": "MIT",
  "private": true,
  "engines": {
    "npm": ">=6.0.0",
    "node": ">=14.0.0"
  },
  "scripts": {
    "dev": "parcel src/index.html",
    "prebuild": "tsc --noEmit",
    "build": "parcel build --public-url './' src/index.html"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/node": "^15.9.0",
    "@typescript-eslint/eslint-plugin": "^4.6.0",
    "@typescript-eslint/parser": "^4.6.0",
    "eslint": "^7.12.1",
    "eslint-plugin-import": "^2.22.1",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.0",
    "parcel-bundler": "^1.12.5",
    "phaser": "^3.24.1",
    "prettier": "^2.1.2",
    "typescript": "^4.0.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run prebuild"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{html,json,yml}": "prettier --write",
    "*.{svg}": "prettier --parser html --write"
  }
}
